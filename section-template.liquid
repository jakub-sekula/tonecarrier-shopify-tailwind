  {%- endstyle -%}
  
  <section
    {% if section.settings.anchor != blank %}
    id="{{section.settings.anchor}}"
    {% endif %}
    class="isolate section-{{ section.id }} section-{{ section.id }}-padding color-{{ section.settings.color_scheme }}">
  

  </section>
  
  {% schema %}
    {
      "name": "Newsletter signup",
      "tag": "section",
      "class": "section",
      "disabled_on": {
        "groups": ["header", "footer"]
      },
      "settings": [
        {
          "type": "range",
          "id": "padding_top",
          "min": 0,
          "max": 100,
          "step": 4,
          "unit": "px",
          "label": "t:sections.all.padding.padding_top",
          "default": 36
        },
        {
          "type": "range",
          "id": "padding_bottom",
          "min": 0,
          "max": 100,
          "step": 4,
          "unit": "px",
          "label": "t:sections.all.padding.padding_bottom",
          "default": 36
        }
      ],
      "blocks": [
        {"type": "@app"}
      ],
      "presets": [
        {
          "name": "New section",
          "settings": {}
        }
      ]
    }
  {% endschema %}