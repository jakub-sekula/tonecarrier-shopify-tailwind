{%- style -%}
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
  
    .section-{{ section.id }} {}

  
    .newsletter-container {
        display: flex;
        flex-direction: column-reverse;
        width: 100%;
        position: relative;
    }


    .newsletter-form-container {
        width: 100%;
        display: flex;
        align-items: center;
    }

    .newsletter-image-container img {
        width: 100%;
    height: 100%;
    object-fit: cover;
    }

    @media(max-width: 768px) {
        .newsletter-image-container {
        mask-image: unset!important;
        --webkit-mask-image: unset!important;
    }
    }
  
  /* md (min-width: 768px) */
  @media (min-width: 768px) {
    .newsletter-container {
        flex-direction: row;
        gap: 6rem;
    }

    .newsletter-form-container {
        padding: 0 6rem;
    }

  
    .newsletter-image-container {
        width: 100%;
    }



  }
  
  /* lg (min-width: 1024px) */
  @media (min-width: 1024px) {}
  
  /* xl (min-width: 1280px) */
  @media (min-width: 1280px) {
  ;
  /* Add your 'xl' styles here */
  }
  
  /* 2xl (min-width: 1536px) */
  @media (min-width: 1536px) {
  ;
  /* Add your '2xl' styles here */
  }
  
  
  {%- endstyle -%}
  
  <section
    {% if section.settings.anchor != blank %}
    id="{{section.settings.anchor}}"
    {% endif %}
    class="isolate section-{{ section.id }} section-{{ section.id }}-padding color-{{ section.settings.color_scheme }}">
  <div class="newsletter-container page-width">
    <div class="newsletter-form-container">

        {% for block in section.blocks %}
            {% if block.type == '@app' %}
          {% render block %}
        {% endif %}
        {% endfor %}

    </div>
    <div class="newsletter-image-container tc-fade-to-left {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
        
              {% if settings.animations_reveal_on_scroll %}
              data-cascade
              style="--animation-order: 15"
              {% endif %}>
        {{section.settings.background_image |  image_url: width: 600 |  image_tag}}
    </div>

  </div>

  </section>


  
  {% schema %}
    {
      "name": "Newsletter signup",
      "tag": "section",
      "class": "section",
      "disabled_on": {
        "groups": ["header", "footer"]
      },
      "settings": [
        {"type": "image_picker",
    "id": "background_image",
"label": "Background image"},
{
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
        {
          "type": "range",
          "id": "padding_top",
          "min": 0,
          "max": 100,
          "step": 4,
          "unit": "px",
          "label": "t:sections.all.padding.padding_top",
          "default": 36
        },
        {
          "type": "range",
          "id": "padding_bottom",
          "min": 0,
          "max": 100,
          "step": 4,
          "unit": "px",
          "label": "t:sections.all.padding.padding_bottom",
          "default": 36
        }
      ],
      "blocks": [
        {"type": "@app"}
      ],
      "presets": [
        {
          "name": "Newsletter signup",
          "settings": {}
        }
      ]
    }
  {% endschema %}