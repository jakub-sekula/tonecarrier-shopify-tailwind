{% assign block_count = 0 %}
{% for block in section.blocks %}
  {% assign block_count = block_count | plus: 1 %}
{% endfor %}
{% assign blocks_per_group = 5 %}
{% assign block_groups = block_count | divided_by: blocks_per_group | ceil %}

<style>
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }


  :root {
    --color-text: navy;
    --color-bg: papayawhip;
    --color-bg-accent: #ecdcc0;
    --size: clamp(10rem, 1rem + 40vmin, 30rem);
    --gap: calc(var(--size) / 14);
    --duration: 360s;
    --scroll-start: 0;
    --scroll-end: calc(-100% - var(--gap));
  }

  @keyframes scroll-x {
    from {
      transform: translateX(var(--scroll-start));
    }
    to {
      transform: translateX(var(--scroll-end));
    }
  }

  @keyframes scroll-y {
    from {
      transform: translateY(var(--scroll-start));
    }
    to {
      transform: translateY(var(--scroll-end));
    }
  }


  .marquee {
    display: flex;
    overflow: hidden;
    user-select: none;
    gap: var(--gap);
    mask-image: linear-gradient(var(--mask-direction, to right), hsl(0 0% 0% / 0), hsl(0 0% 0% / 1) 20%, hsl(0 0% 0% / 1) 80%, hsl(0 0% 0% / 0));
    width: 100%;
  }

  .marquee__group {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: space-around;
    gap: var(--gap);
    min-width: 100%;
    animation: scroll-x var(--duration) linear infinite;
  }

  .review-tile {
    background: #fafafa;
    width: 100%;
    position: relative;
    overflow: hidden;

  }


  .mobile-only .review-tile {
    aspect-ratio: 5 / 4;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: auto
  }

  .mobile-only .square {
    aspect-ratio: 5 / 4;
  }

  .review-text-container {
    padding: 2rem;
    height: 100%;
    display: flex;
    flex-direction: column;
    gap: 1rem
  }

  .mobile-only .review-text-container {
    gap: 2rem;
    width: 100%
  }

  .review-tile p {
    font-size: 1.4rem
  }

  .mobile-only .review-tile p {
    font-size: 1.6rem;
    /* clamp(1rem, 4vw, 3rem); */
  }


  .review-tile > img {
    width: 100%;
    height: 100%;
    object-fit: cover
  }

  .stars-container {
    display: flex;
    height: 1.6rem;
    gap: 0.25rem
  }

  .mobile-only .stars-container {
    display: flex;
    height: 3rem;
    gap: 0.25rem;
    margin-top: 2rem;
  }

  .stars-container svg {
    fill: var(--tw-color-orange-400);
    stroke: var(--tw-color-orange-400);
    height: 100%;
    width: fit-content;
  }

  .verified-container {
    display: flex;
    align-items: center;
    gap: 0.4rem;
    font-size: 1.2rem;
    width: 100%
  }

  .mobile-only .verified-container {
    display: flex;
    align-items: center;
    gap: 0.6rem;
    font-size: 1.4rem;
    width: 100%
  }

  .verified-container svg {
    height: 1.5rem;
    width: fit-content;
    stroke: var(--tw-color-green-500)
  }

  .verified-container span {
    margin-left: auto
  }

  .review-author {
    margin-top: auto
  }

  .mobile-only .review-author {
  ;
  /* margin-top: unset; */
}


@media (prefers-reduced-motion: reduce) {
  .marquee__group {
    animation-play-state: paused;
  }
}

.marquee--vertical {
  --mask-direction: to bottom;
}

.marquee--vertical,
.marquee--vertical .marquee__group {
  flex-direction: column;
}

.marquee--vertical .marquee__group {
  animation-name: scroll-y;
}

.marquee--reverse .marquee__group {
  animation-direction: reverse;
  animation-delay: calc(-0.25 * var(--duration));
}

/* Parent wrapper */
.wrapper {
  display: grid;
  grid-template-columns: repeat(1, 1fr);
  gap: var(--gap);
  margin: auto;
  max-height: {{ section.settings.max_height | times: 0.5 | round: 0 }}vh;
  position: relative;
  /* overflow: hidden */
}

.wrapper.mobile-only {
  display: flex;
}

.wrapper--horizontal {
  grid-template-rows: repeat(5, 1fr);
}

.wrapper--vertical {
  /* flex-direction: row; */
  height: 100vh;
  justify-content: center;
  grid-template-rows: repeat(1, {{section.settings.max_height | times: 0.5 | round: 0}}vh);
}

.review-grid-hide-on-mobile {
  display: none;
}

.review-tile.square {
  aspect-ratio: 1;
}

@keyframes fade {
  to {
    opacity: 0;
    visibility: hidden;
  }
}

@media (min-width: 540px) {
  .wrapper--vertical {
    grid-template-columns: repeat(2, 1fr);
  }
  .mobile-only {
    display: none
  }
  
  .review-grid-hide-on-mobile {
    display: grid;
  }

}
/* md (min-width: 768px) */
@media (min-width: 768px) {


  .wrapper--vertical {
    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: repeat(1, {{section.settings.max_height | times: 0.75 | round: 0}}vh);
    max-height: {{ section.settings.max_height | times: 0.75 | round: 0 }}vh;

  }

}

/* lg (min-width: 1024px) */
@media (min-width: 1024px) {}

/* xl (min-width: 1280px) */
@media (min-width: 1280px) {
  .wrapper--vertical {
    grid-template-columns: repeat(4, 1fr);
    grid-template-rows: repeat(1, {{section.settings.max_height}}vh);
    max-height: {{ section.settings.max_height }}vh;

  };
  /* Add your 'xl' styles here */
}

/* 2xl (min-width: 1536px) */
@media (min-width: 1536px) {
;
}

