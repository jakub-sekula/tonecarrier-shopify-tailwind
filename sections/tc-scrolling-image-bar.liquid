;
/* width: 100%; */
}

</style>

<section
  {% if section.settings.anchor != blank %}
  id="{{section.settings.anchor}}"
  {% endif %}
  class="isolate section-{{ section.id }} section-{{ section.id }}-padding color-{{ section.settings.color_scheme }} {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
  <article class="page-width wrapper review-grid-hide-on-mobile {% if section.settings.vertical %} wrapper--vertical {%else %}wrapper--horizontal {%endif %}">

    
    {% for i in (1..block_groups) %}
      {% assign mod_result = i | modulo: 2 %}

      {% assign slice_start_index = i | times: blocks_per_group | minus: blocks_per_group %}

      {% assign current_block_group = section.blocks | slice: slice_start_index, blocks_per_group %}

      <div class="marquee {% if section.settings.vertical %} marquee--vertical {%endif %} {% if mod_result == 1 %}
  marquee--reverse
    {% endif %}">

        {% for j in (1..2) %}
          <div class="marquee__group">
            {% for block in current_block_group %}
              <div class="review-tile {% if block.settings.image != blank %} square {%endif %}" {{ block.shopify_attributes }}>
                {% if block.settings.image != blank %}
                  {{ block.settings.image | image_url: width: 600 | image_tag }}
                {% else %}
                  <div class="review-text-container">

                    <div class="stars-container">
                      {% for k in (1..block.settings.stars) %}
                        {% render 'tc-lucide-icon'
                          , icon_name: "lucide-star" %}
                      {% endfor %}
                    </div>
                    <p>{{ block.settings.review }}</p>
                    <p class="review-author">
                      Reviewed by
                      <strong>{{ block.settings.author }}</strong>
                    </p>
                    <div class="verified-container">{% render 'tc-lucide-icon'
  , icon_name: "lucide-shield-check" %} Verified purchase
                      <span>{{ block.settings.date }}</span>
                    </div>
                  </div>
                {% endif %}
              </div>
            {% endfor %}
          </div>
        {% endfor %}
      </div>

    {% endfor %}
  </article>


  <swiper-container space-between="30" autoplay-delay="4000" loop="true" autoplay-disable-on-interaction="false"  class="page-width mobile-only">
    {%for block in section.blocks %}
    <swiper-slide class="review-tile {% if block.settings.image != blank %}square {%endif %}" {{ block.shopify_attributes }}>
      {% if block.settings.image != blank %}
      {{block.settings.image |  image_url: width: 600 |  image_tag }}
      {% else %}
      <div class="review-text-container">
        <div class="stars-container">
          {% for i in (1..block.settings.stars) %}  
            {% render 'tc-lucide-icon',icon_name: "lucide-star" %}
          {% endfor %}
          </div>
          <p>{{block.settings.review}}</p>
          <p class="review-author">
            Reviewed by <strong>{{block.settings.author}}</strong>
          </p>
          <div class="verified-container">{%render 'tc-lucide-icon', icon_name: "lucide-shield-check" %} Verified purchase <span>{{block.settings.date}}</span></div>
      </div>
      {% endif %}
    </swiper-slide>
  {% endfor %}
</swiper-container>
</section>

