{%- style -%}

    .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
        padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
        background: red;
    }
    
    .section-{{ section.id }} {
        background-color: {{ section.settings.background_color }}
    }

    .manual-step {
        background: white;
        display: flex;
        flex-direction: column;
        gap: 2rem;

    }

    .manual-step div {
        width: 100%;
        height: 250px;
    }

  
    
    
    /* md (min-width: 768px) */
    @media (min-width: 768px) {
    .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
    }

    .manual-step {
        flex-direction: row;

    }
    
    }
    
    /* lg (min-width: 1024px) */
    @media (min-width: 1024px) {
     
    }
    
    /* xl (min-width: 1280px) */
    @media (min-width: 1280px) {
    ;
    
    }
    
    /* 2xl (min-width: 1536px) */
    @media (min-width: 1536px) {
    ;
    
    }
    
    
      
      {%- endstyle -%}
    
    <section
      {% if section.settings.anchor != blank %}
      id="{{section.settings.anchor}}"
      {% endif %}
      class="isolate section-{{ section.id }} section-{{ section.id }}-padding color-{{ section.settings.color_scheme }}">
      {% if section.settings.background_image != blank %}
        {% assign bg_image_class = "background-image-" | append: section.id %}
        <div class="tw-absolute tw-w-full tw-top-0 tw-left-0 tw-h-full tw-overflow-hidden">{{ section.settings.background_image | image_url: width: 1500 | image_tag: class: bg_image_class }}</div>
      {% endif %}
      <div class="manual-step {% unless section.settings.full_width %} page-width{% endunless %}">
         <div class="tw-bg-orange-500 manual-step__image">hello</div>
         <div class="tw-bg-blue-500 manual-step__content">world</div>
      </div>
    
    </section>

{% schema %}
    {
      "name": "Manual step",
      "class": "section",
      "tag": "section",
      "settings": [

        {
          "type": "range",
          "id": "padding_top",
          "min": 0,
          "max": 100,
          "step": 4,
          "unit": "px",
          "label": "t:sections.all.padding.padding_top",
          "default": 36
        },
        {
          "type": "range",
          "id": "padding_bottom",
          "min": 0,
          "max": 100,
          "step": 4,
          "unit": "px",
          "label": "t:sections.all.padding.padding_bottom",
          "default": 36
        },
        {
          "type": "text",
          "id": "anchor",
          "label": "Anchor"
        },
        {"type": "checkbox",
      "id": "full_width",
    "label": "Full width"}

      ],
      "blocks": [
        {
          "type": "bullet",
          "name": "Bullet",
          "settings": [
            {
              "type": "select",
              "id": "type",
              "options": [
                {
                  "value": "default",
                  "label": "Default"
                },
                {
                  "value": "caution",
                  "label": "Caution"
                },
                {
                  "value": "tip",
                  "label": "Tip"
                }
               
              ],
              "default": "default",
              "label": "Bullet type"
            },
            {
              "type": "richtext",
              "id": "text",
              "label": "Bullet text",
              "default": "<p>Bullet text</p>"
            }
          ]
        }
        
      ],
      "presets": [
        {
          "name": "Manual step",
          "settings": {
            
          }
        }
      ]
    }
  {% endschema %}