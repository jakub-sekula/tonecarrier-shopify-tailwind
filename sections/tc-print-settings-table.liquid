{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  .product-print-info-section table {
    width: 100%;
    max-width:960px;
    margin: 0 auto;
    border-collapse: collapse;
  }

  .product-print-info-section table th,
  .product-print-info-section table td {
    border: 1px solid #ddd;
    padding: 8px;
    text-align: left;
  }

  .product-print-info-section table td:first-child {
    background: rgb(243, 243, 243)
  }

  .product-print-info-section strong {
    font-weight: 800
  }

  .product-print-info-section table th {
    background-color: #f2f2f2;
    font-weight: bold;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section class="isolate tw-overflow-hidden section-{{ section.id }} section-{{ section.id }}-padding color-{{ section.settings.color_scheme }}">
  <div class="page-width !tw-pr-24 md:!tw-pr-0 tw-relative">

    {% assign print_info = product.metafields.custom.print_information %}
    {% if print_info != blank %}
      <div class="product-print-info-section">
        <table>
          <tbody>
            {% for row in print_info.value %}
              <tr>
                <td><strong>{{ row.key }}</strong></td>
                <td>{{ row.value }}</td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    {% else %}
      <p>No print information available.</p>
    {% endif %}
  </div>


</section>

{% schema %}
  {
    "name": "JSON table",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Padding Top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Padding Bottom",
        "default": 36
      }
    ],
    "presets": [
      {
        "name": "Print settings table",
        "settings": {}
      }
    ]
  }
{% endschema %}