{%- style -%}

  .homepage-hero-section-{{ section.id }} {
    z-index: 1;
    height: 100%;
    position: relative;
    color: white;
    padding-top: calc(5rem + var(--dynamic-header-height));
    margin-top: calc(-1 * var(--dynamic-header-height));
    margin-bottom: {{ section.settings.margin_bottom }}px;
    display: flex;
    flex-direction: column;
    overflow: visible;
}

.hero-blocks {
  text-align: center;
  display: flex;
  flex-direction: column;
  gap: 2.5rem;
  margin: 6rem auto 10rem auto;
}


.homepage-hero-background {
  background: black;
  position: absolute;
  z-index: -10;
  top: 0;
  left: 0;
  width: 100%;
  height: 80%;
}

.homepage-hero-background video {
  background: black;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  opacity: calc({{ section.settings.background_opacity }} / 100);
  filter: blur({{ section.settings.background_blur }}px)
}


.hero-heading {
  font-family: "Inter Tight"
  , sans-serif;
  font-weight: 500;
  color: white;
  font-size: 3.25rem;
  line-height: 1.2em;
  letter-spacing: -0.02em;
}

.hero-heading strong {
  background-image: linear-gradient(to right, #f59e0b, #f87171);
  background-clip: text;
  color: transparent;
  font-optical-sizing: auto;
  font-weight: 800;
  font-style: normal;
}

.hero-text {
  font-size: 1.4rem;
  line-height: 1.5em;
  margin: 0 auto;
  margin-bottom: 2rem;
  font-weight: 200;
}

@media (max-width: 330px) {
  .hero-heading * {
    display: inline
  }

  .hero-heading p:not(:last-child) {
    margin-right: 0.5ch;
  }
}

.hero-text p {
  display: inline
}

.hero-text p:not(:last-child) {
  /* margin-bottom: 1rem; */
  margin-right: 0.5ch;
}

.hero-content-wrapper {
  margin: 0 auto;
  width: 100%;
}

.hero-button-container {
  display: flex;
  flex-direction: column;
  width: 75%;
  gap: 2rem;
  margin: 0 auto;
}

.hero-button-container .button {
  flex-shrink: 0;
  background: var(--tw-color-orange-500);
  color: white;
  /* letter-spacing: inherit; */
  font-size: 1.6rem;
  padding-top: 1rem;
  padding-bottom: 1rem;
  font-weight: 400;
  font-family: "Inter Tight"
  , sans-serif;
}

.hero-button-container .button--secondary {
  flex-shrink: 0;
  background: transparent;
  border: 1px solid var(--tw-color-white);
  color: var(--tw-color-white);
}

.hero-media-container {
  width: 100%;
  max-width: 800px;
  display: grid;
  place-items: center;
  aspect-ratio: 16 / 9;
  margin: 0 auto;
  box-shadow: rgba(50, 50, 93, 0.25) 0 13px 27px -5px
  , rgba(0, 0, 0, 0.3) 0 8px 16px -8px;
  border-radius: 0.5rem;
  position: relative;
}

.hero-media-container video {
  /* border-radius: 0.5rem; */
  z-index: 2;
}


.hero-media-glow {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 30%;
  z-index: 1;
  box-shadow: 0 0 160px 6px rgba(255, 140, 0, 0.15);
}

@media (min-width: 450px) {
  .hero-blocks {
    text-align: center;
  }

  .hero-heading {
    font-size: 4rem;
  }


}

@media (min-width: 540px) {

  .hero-button-container {
    flex-direction: row;
    width: 100%;
    justify-content: center;
    gap: 2rem;
  }


}

@media (min-width: 600px){
  .hero-text p {
    display: inherit
  }
}

/* md (min-width: 768px) */
@media (min-width: 768px) {

  .homepage-hero-background {
    height: 85%;
  }


  

  .homepage-hero-section-{{ section.id }} {
    padding-top: calc(6rem + var(--dynamic-header-height));
    margin-top: calc(-1 * var(--dynamic-header-height));
    flex-direction: column;
    align-items: center;
    gap: 3rem
  }

  .hero-heading {
    font-size: 5rem
  }

  .hero-text {
    font-size: 1.6rem;
  }

  .hero-content-wrapper {}

.hero-blocks {
  text-align: center;
}

.hero-media-container {
  max-width: 1000px;
  margin-top: 3rem;
  box-shadow: rgba(50, 50, 93, 0.25) 0 50px 100px -20px
  , rgba(0, 0, 0, 0.3) 0 30px 60px -30px;
}

.hero-text {}


.hero-button-container {
  margin-top: 1rem;
  gap: 2rem;
}

.hero-button-container .button {
  font-size: 1.6rem;
  padding-top: inherit;
  padding-bottom: inherit;
}


}

/* lg (min-width: 1024px) */
@media (min-width: 1024px) {

  .hero-heading {
    font-size: 7rem
  }

  .hero-text {
    font-size: 1.75rem
  }


}

