<section class="isolate homepage-hero-section-{{section.id}} tw-overflow-hidden section-{{ section.id }} section-{{ section.id }}-padding color-{{ section.settings.color_scheme }}">
  <div class="hero-content-wrapper {% unless section.settings.full_width %} page-width{% endunless %}">
    <div class="hero-blocks">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'heading' -%}
            <h1
              class="hero-heading rte inline-richtext {{ block.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
              {{ block.shopify_attributes }}
              {% if settings.animations_reveal_on_scroll %}
              data-cascade
              style="--animation-order: {{ forloop.index }};"
              {% endif %}>
              {{ block.settings.heading }}
            </h1>
          {%- when 'caption' -%}
            <p
              class="hero-caption hero-richtext {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
              {{ block.shopify_attributes }}
              {% if settings.animations_reveal_on_scroll %}
              data-cascade
              style="--animation-order: {{ forloop.index }};"
              {% endif %}>
              {{ block.settings.caption | escape }}
            </p>
          {%- when 'text' -%}
            <div
              class="hero-text hero-richtext rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
              {{ block.shopify_attributes }}
              {% if settings.animations_reveal_on_scroll %}
              data-cascade
              style="--animation-order: {{ forloop.index }};"
              {% endif %}>
              {{ block.settings.text }}
            </div>
          {%- when 'button' -%}
            <div
              class="hero-button-container {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
              {{ block.shopify_attributes }}
              {% if settings.animations_reveal_on_scroll %}
              data-cascade
              style="--animation-order: {{ forloop.index }};"
              {% endif %}>
              {%- if block.settings.button_label != blank -%}
                {% comment %} {% render 'tc-button'
                                                                                                                                                                                                                        , type: "link"
                                                                                                                                                                                                                        , url: block.settings.button_link
                                                                                                                                                                                                  , text: block.settings.button_label %}  {% endcomment %}

                <a href="{{block.settings.button_link}}" class="button">
                  {{ block.settings.button_label }}
                </a>
              {%- endif -%}
              {%- if block.settings.button_label_2 != blank -%}
                {% comment %} {% render 'tc-button'
                                                                                                                                                                                                      , type: "link"
                                                                                                                                                                                                      , url: block.settings.button_link_2
                                                                                                                                                                                  , text: block.settings.button_label_2 %} {% endcomment %}
                <a href="{{block.settings.button_link_2}}" class="button button--secondary">
                  {{ block.settings.button_label_2 }}
                </a>
              {%- endif -%}
            </div>
        {%- endcase -%}
      {%- endfor -%}
      </div>
      <div
        class="hero-media-container {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
        {% if settings.animations_reveal_on_scroll %}
        data-cascade
        style="--animation-order: 5;"
        {% endif %}>
        <div class="hero-media-glow"></div>
        {{ section.settings.hero_video | video_tag: autoplay: true, loop: true, muted: true, controls: false, image_size: "1000px", poster: section.settings.hero_image }}
      </div>
  </div>
  {% if section.settings.background_video != blank %}
    <div class="homepage-hero-background">
      {{ section.settings.background_video | video_tag: autoplay: true, loop: true, muted: true, controls: false, image_size: "1200px", poster: section.settings.background_image }}
    </div>
  {% endif %}
  {% if section.settings.background_image != blank %}
    {{ section.settings.background_image | image_url: width: 1500 | image_tag: class: "homepage-hero-background" }}
  {% endif %}
</section>

<script>
        const header = document.querySelector('sticky-header');

        function updateHeaderHeight() {
            const headerHeight = header.offsetHeight;
            document.documentElement.style.setProperty('--dynamic-header-height', `${headerHeight}px`);
            console.log("updated header height")
        }

        function setTransparentHeader() {
            if (window.scrollY === 0) {
                header.style.backgroundColor = 'transparent';
                header.style.border = 'none';
              } else {
                header.style.backgroundColor = ''; // Reset to default or specify another color
            }
        }

        // Update header height on load
        updateHeaderHeight();
        setTransparentHeader()

        // Update header height on window resize
        window.addEventListener('resize', updateHeaderHeight);

        // Scroll event to change header background
        window.addEventListener('scroll', setTransparentHeader);
</script>


