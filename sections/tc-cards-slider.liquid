{%- endstyle -%}

<section
  {% if section.settings.anchor != blank %}
  id="{{section.settings.anchor}}"
  {% endif %}
  class="isolate section-{{ section.id }} section-{{ section.id }}-padding color-{{ section.settings.color_scheme }}">
<div class=" page-width">
  <div id="swiper-{{section.id}}" class="swiper swiper-{{section.id}}">
    <ul class="swiper-wrapper swiper-wrapper-{{section.id}}">
      {% for block in section.blocks %}
        <li class="swiper-slide swiper-slide-{{section.id}}" {{ block.shopify_attributes }}>
          <i class="icon-container">
            {% if block.settings.icon != blank and block.settings.lucide_icon == blank %}
              <img src="{{block.settings.icon |  image_url: width: 10}}">
            {% else %}
              {% render 'tc-lucide-icon'
                , icon_name: block.settings.lucide_icon %}
            {% endif %}
          </i>
          <h3 class="card-heading-{{section.id}}">
            {{ block.settings.title }}
          </h3>
          <p class="card-caption-{{ section.id }}">{{ block.settings.caption }}</p>
        </li>
      {% endfor %}
    </ul>
  </div>
</div>
</section>

<script>
  // swiper element
  document.addEventListener("DOMContentLoaded", () => {

    const swiper = new Swiper('#swiper-{{section.id}}', {
      slidesPerView: 1,
      loop: true,
      autoplay: true,
      delay: 500,
      breakpoints: {
        768: {
          slidesPerView: 2,
      spaceBetween: 30,
  
        },
        1024: {
      spaceBetween: 30,
      slidesPerView: 3,
        },
      },
    });

  })
</script>

{% schema %}
  {
    "name": "Hero section",
    "tag": "section",
    "class": "section",
    "disabled_on": {
      "groups": ["header", "footer"]
    },
    "settings": [
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      },
      {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "t:sections.all.colors.label",
        "default": "scheme-1"
      }
    ],
    "blocks": [
      {
        "type": "card",
        "name": "Card",
        "settings": [
          {
            "type": "image_picker",
            "id": "icon",
            "label": "Icon"
          },
          {
            "type": "text",
            "id": "lucide_icon",
            "label": "Lucide icon"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
          {
            "type": "text",
            "id": "caption",
            "label": "Caption"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Cards slider",
        "settings": {}
      }
    ]
  }
{% endschema %}