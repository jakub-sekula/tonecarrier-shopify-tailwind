}

.swiper-slide-{{ section.id }} {
  width: 100%;
  height: 100%;
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  gap: 1rem;
  padding: 3rem 0;
}

.card-heading-{{ section.id }} {
  font-family: "Inter Tight"
  , sans-serif;
  font-weight: 400;
  font-size: 2rem;
  line-height: 1em;
  letter-spacing: -0.02em;
  position: relative;
  display: flex;
  align-items: center;
  padding-left: 1.5rem;
}

.card-heading-{{ section.id }}::before {
  position: absolute;
  left: 0;
  height: 100%;
  width: 2px;
  background: var(--tw-color-slate-500);
  content: ""
}

.card-caption-{{ section.id }} {
  margin-left: 1.5rem;
  font-weight: 300;
  font-size: 1.25rem;
}

.icon-container {
  width: 5rem;
  height: 5rem;
  display: grid;
  place-items: center;
  background: var(--tw-color-slate-100);
  border-radius: 4px;
  margin-bottom: 1rem;
}

.icon-container svg {
  stroke: var(--tw-color-slate-500);
}

/* md (min-width: 768px) */
@media (min-width: 768px) {

  .swiper-slide-{{ section.id }} {}
}

/* lg (min-width: 1024px) */
@media (min-width: 1024px) {}

