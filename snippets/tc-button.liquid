{% assign type = type | default: "button" %}
{% assign url = url | default: "#" %}
{% assign disabled = disabled | default: false %}
{% assign text = text | default: "Click Me" %}

{% if type == "link" %}
  <a
    role="link"
    href="{{ url }}"
    aria-disabled="{{ disabled }}"
    class="tw-bg-orange-500 md:tw-px-8 md:tw-py-3 tw-px-4 tw-py-2 tw-font-medium tw-inline-flex tw-items-center tw-justify-center tw-border tw-border-transparent tw-rounded tw-leading-snug tw-transition tw-duration-150 tw-ease {% if disabled %} tw-opacity-50 tw-cursor-not-allowed {% endif %}"
    {% if disabled %} onclick="return false;" {% endif %}
  >
    {{ text | escape }}
  </a>
{% else %}
  <button
    role="button"
    aria-disabled="{{ disabled }}"
    class="tw-bg-orange-500 md:tw-px-8 md:tw-py-3 tw-px-4 tw-py-2 tw-font-medium tw-inline-flex tw-items-center tw-justify-center tw-border tw-border-transparent tw-rounded tw-leading-snug tw-transition tw-duration-150 tw-ease {% if disabled %} tw-opacity-50 tw-cursor-not-allowed {% endif %}"
    {% if disabled %} disabled {% endif %}
  >
    {{ text | escape }}
  </button>
{% endif %}
